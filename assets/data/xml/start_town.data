<!-- See generic.data for instructions on how to edit this file -->

<room_definitions>

	<GLOBAL>

		<symbol>
			<char>0</char>
			<type>SPAWNER_0</type>
			<visible>false</visible>
		</symbol>

		<symbol>
			<char>P</char>
			<type>PLAYER_PLACER</type>
			<visible>false</visible>
		</symbol>

		<symbol>
			<char>l</char>
			<type>FIRE_CAMP</type>
			<visible>false</visible>
			<short_description>A fire. It's hot.</short_description>
			<long_description>A toasty, toasty fire.</long_description>
		</symbol>

		<symbol>
			<char>+</char>
			<type>DOOR_UNLOCKED</type>
			<visible>true</visible>
			<short_description>A door. It's unlocked. This was placed by the room placer.</short_description>
			<long_description>A door. It's unlocked. This was placed by the room placer. It can open, maybe.</long_description>
			<model>
				<type>cube</type>
				<dimensions>
					<number>3</number>
					<d1>5.0</d1>
					<d2>10.0</d2>
					<d3>1.0</d3>
				</dimensions>
			</model>
			<texture>tex+</texture>
			<colour>
				<red>1.0</red>
				<green>1.0</green>
				<blue>1.0</blue>
			</colour>
		</symbol>

		<symbol>
			<char>L</char>
			<type>STAIR_DOWN</type>
			<visible>true</visible>
			<meta>
				<data>
					<name>level</name>
					<contents>generic</contents>
				</data>
			</meta>
			<short_description>A Ladder. It leads down.</short_description>
			<long_description>A Ladder. It leads down. You can climb it.</long_description>
			<model>
				<type>cube</type>
				<dimensions>
					<number>3</number>
					<d1>5.0</d1>
					<d2>5.0</d2>
					<d3>5.0</d3>
				</dimensions>
			</model>
			<texture>tex^</texture>
			<colour>
				<red>1.0</red>
				<green>1.0</green>
				<blue>1.0</blue>
			</colour>
		</symbol> 

	</GLOBAL>

	<!-- The Level -->
	<MAIN>
		<level>
			<width>15</width>
			<height>10</height>

			<depth_min>1</depth_min>
			<depth_max>99</depth_max>

			<meta>
				<data>
					<name>monster_type</name>
					<contents>group</contents>
				</data>
			</meta>

			<room>
				<row>l......l...0..l</row>
				<row>.##########....</row>
				<row>.#ll.....L####.</row>
				<row>.#...P.l..l.+..</row>
				<row>.#.l....ll####.</row>
				<row>.#.########l...</row>
				<row>.#+#...l....0..</row>
				<row>.#.#.#####l###.</row>
				<row>.#.#.l..0..l...</row>
				<row>.l.l..........l</row>
			</room>
		</level>
	</MAIN>

</room_definitions>